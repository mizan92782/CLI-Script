#!/bin/bash

# =========================================
# Network Commands Helper for Ubuntu/Linux
# =========================================

help() {
cat << 'EOF'

================ NETWORK COMMANDS CHEAT SHEET ================

ðŸ”¹ BASIC NETWORK INFO
------------------------------------------------------------

# Show IP address
ip a
ip addr show

# Old command (still works)
ifconfig

# Show hostname
hostname
hostname -I

------------------------------------------------------------

ðŸ”¹ CHECK INTERNET CONNECTIVITY
------------------------------------------------------------

# Ping a host
ping google.com

# Ping with count
ping -c 4 google.com

------------------------------------------------------------

ðŸ”¹ NETWORK INTERFACES
------------------------------------------------------------

# List network interfaces
ip link show

# Enable interface
sudo ip link set eth0 up

# Disable interface
sudo ip link set eth0 down

------------------------------------------------------------

ðŸ”¹ ROUTING & GATEWAY
------------------------------------------------------------

# Show routing table
ip route
route -n

------------------------------------------------------------

ðŸ”¹ DNS INFORMATION
------------------------------------------------------------

# DNS lookup
nslookup google.com

# Using dig
dig google.com

------------------------------------------------------------

ðŸ”¹ OPEN / LISTENING PORTS
------------------------------------------------------------

# Show listening ports
sudo ss -tuln

# Show ports with process
sudo ss -tulnp

------------------------------------------------------------

ðŸ”¹ TEST PORT CONNECTIVITY
------------------------------------------------------------

# Using nc (netcat)
nc -zv localhost 80

# Using telnet
telnet localhost 80

------------------------------------------------------------

ðŸ”¹ DOWNLOAD / UPLOAD
------------------------------------------------------------

# Download file
wget https://example.com/file.zip

# Download with curl
curl -O https://example.com/file.zip

# API request
curl -X GET https://api.example.com

------------------------------------------------------------

ðŸ”¹ NETWORK SCANNING
------------------------------------------------------------

# Install nmap
sudo apt install nmap

# Scan localhost
nmap localhost

# Scan specific port
nmap -p 22 localhost

------------------------------------------------------------

ðŸ”¹ FIREWALL (UFW)
------------------------------------------------------------

# Firewall status
sudo ufw status

# Enable firewall
sudo ufw enable

# Allow port
sudo ufw allow 80

# Deny port
sudo ufw deny 80

# Delete rule
sudo ufw delete allow 80

------------------------------------------------------------

ðŸ”¹ ACTIVE CONNECTIONS
------------------------------------------------------------

# Show active connections
ss -tunap

------------------------------------------------------------

ðŸ”¹ NETWORK TRAFFIC MONITORING
------------------------------------------------------------

# Install iftop
sudo apt install iftop

# Run iftop
sudo iftop

------------------------------------------------------------

ðŸ”¹ QUICK TIPS
------------------------------------------------------------

âœ” ip a â†’ modern replacement of ifconfig
âœ” ss â†’ faster than netstat
âœ” curl â†’ best for API testing
âœ” nmap â†’ security & port scan tool

============================================================

EOF
}

# Auto show help
help
